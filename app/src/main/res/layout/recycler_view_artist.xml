<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_view_height"
    android:layout_gravity="center"
    android:background="@drawable/viewholder_selector"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="@dimen/recycler_view_item_elevation"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/artist_recycler_view_imageView"
            android:layout_width="@dimen/recycler_view_thumbnail_size"
            android:layout_height="@dimen/recycler_view_thumbnail_size"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            />

        <LinearLayout
            android:id="@+id/artist_recycler_view_badge_layout_container"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/artist_recycler_view_imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_alignTop="@+id/artist_recycler_view_imageView"
            android:gravity="bottom|right"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/artist_recycler_view_popularity_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Small"
                    />

                <ImageView
                    android:layout_width="@dimen/recycler_view_artist_badge_icon_size"
                    android:layout_height="@dimen/recycler_view_artist_badge_icon_size"
                    android:src="@drawable/ic_popularity_light"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/artist_recycler_view_followers_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Small"
                    />

                <ImageView
                    android:layout_width="@dimen/recycler_view_artist_badge_icon_size"
                    android:layout_height="@dimen/recycler_view_artist_badge_icon_size"
                    android:src="@drawable/ic_followers_light"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/artist_recycler_view_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_toStartOf="@id/artist_recycler_view_badge_layout_container"
            android:layout_toEndOf="@id/artist_recycler_view_imageView"
            android:singleLine="true"
            android:ellipsize="end"
            />

    </RelativeLayout>

</FrameLayout>