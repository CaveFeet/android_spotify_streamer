<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/coachmark_image_size"
                android:layout_height="@dimen/coachmark_image_size"
                android:layout_gravity="center_horizontal|top"
                android:src="@mipmap/ic_coachmark_results"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/coachmark_results_view_artists"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/keyline_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/coachmark_results_dismiss_text"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/coachmark_results_view_artist_tracks_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/keyline_1"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>